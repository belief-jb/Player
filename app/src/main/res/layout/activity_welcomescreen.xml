<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Welcomescreen">


    <ImageView
        android:id="@+id/roundimg"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-340dp"
        android:src="@drawable/rounded_corner" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="250.00dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/welcomeimg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/player" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-55dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/check"
                android:layout_width="40.00dp"
                android:layout_height="40.00dp"
                android:buttonTint="@color/ThemeColorLight" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/i_have_read"
                style="@style/TextStyle"
                android:text="I have read accept the"
                android:textColor="@color/TextColorDark" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/terms_condition"
                style="@style/TextStyle"
                android:autoLink="all"
                android:clickable="true"
                android:text="Terms @ Conditions"
                android:textColor="@color/ThemeColorLight" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            style="@style/MyButton"
            android:layout_marginTop="-40dp"
            android:background="@drawable/rounded_button"
            android:text="continue" />


    </LinearLayout>


</LinearLayout>





